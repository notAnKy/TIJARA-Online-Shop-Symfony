{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}
{% block stylesheets %}
    <style>
        .custom-list-group {
            background-color: #f8f9fa; /* Set your desired background color */
             border-radius: 0;
        }
    </style>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <!-- Dashboard Navigation Bar -->
    <div class="row">
        <div class="col-md-2 p-0">
            <div class="list-group custom-list-group h-100 d-flex flex-column">
                <a href="{{ path('app_adminpage') }}" class="list-group-item list-group-item-action active">
                    Dashboard
                </a>
                <a href="{{ path('article_list') }}" class="list-group-item list-group-item-action">
                    Article List
                </a>
                <a href="{{ path('internaute_list') }}" class="list-group-item list-group-item-action">
                    Internaute List
                </a>
                <div class="dropdown mt-auto">
                    <a href="#" class="list-group-item list-group-item-action dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Hi,  admin!
                    </a>
                <a href="{{ path('logout') }}" class="list-group-item list-group-item-action">Logout</a>
                </div>
            </div>
        </div>
        <!-- Main Content Area -->
        <div class="col-md-10">
            <div class="container">
                <h1 class="text-center">Panier for {{ internaute.login }}</h1>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Article Name</th>
                                    <th>Quantity</th>
                                    <th>Emballage</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in panier %}
                                <tr>
                                    <td>{{ item.article.libArt }}</td>
                                    <td>{{ item.quantite }}</td>
                                    <td>{{ item.emballage }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <a href="{{ path('app_internaute_list') }}" class="btn btn-primary">Return to Internaute List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
