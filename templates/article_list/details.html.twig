{% extends 'base.html.twig' %}

{% block title %}Article Details{% endblock %}
{% block stylesheets %}
    <style>
        .custom-list-group {
            background-color: #f8f9fa; /* Set your desired background color */
             border-radius: 0;
        }
    </style>
{% endblock %}
{% block body %}
<div class="container-fluid">
    <!-- Dashboard Navigation Bar -->
    <div class="row">
        <div class="col-md-2 p-0">
            <div class="list-group custom-list-group h-100 d-flex flex-column">
                <a href="{{ path('app_adminpage') }}" class="list-group-item list-group-item-action active">
                    Dashboard
                </a>
                <a href="{{ path('article_list') }}" class="list-group-item list-group-item-action">
                    Article List
                </a>
                <a href="{{ path('internaute_list') }}" class="list-group-item list-group-item-action">
                    Internaute List
                </a>
                <div class="dropdown mt-auto">
                    <a href="#" class="list-group-item list-group-item-action dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Hi,  {{ login_name }}!
                    </a>
                <a href="{{ path('logout') }}" class="list-group-item list-group-item-action">Logout</a>
                </div>
            </div>
        </div>
        <!-- Main Content Area -->
        <div class="col-md-10">
            <div class="container">
                <h1 class="text-center">Article Details</h1>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.libArt }}</h5>
                                <p class="card-text">Price: {{ article.prixArt }}</p>
                                <p class="card-text">Category: {{ article.catArt }}</p>
                                <!-- Add more details here if needed -->
                            </div>
                        </div>
                        <a href="{{ path('app_article_list') }}" class="btn btn-secondary">Back to Article List</a>
                        
                        {# Button to trigger modification form #}
                        <button type="button" class="btn btn-primary" id="modifyButton" style="visibility: hidden;" >Modify</button>
                        
                        {# Modification Form #}
                        <form action="{{ path('update_article', {'id': article.id}) }}" method="post" class="mt-3" id="modifyForm" >
                            <div class="form-group">
                                <label for="name">Article Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{ article.libArt }}">
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="text" class="form-control" id="price" name="price" value="{{ article.prixArt }}">
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

